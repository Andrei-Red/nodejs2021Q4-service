{
  "compilerOptions": {
    "noImplicitAny": true,
    "strict": true,

    "alwaysStrict": true,
    "target": "ES6",
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "noUnusedLocals": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}








