{
  "compilerOptions": {
    "noImplicitAny": true,
    "strict": true,

    "alwaysStrict": true,
    "target": "ES6",
    "module": "CommonJS",
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "noUnusedLocals": true,

    "allowJs": false,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
}
